<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="views.screen.VolunteerOrgRegisterEventScreenHandler"
            prefHeight="768" prefWidth="1024">
    <top>
        <HBox alignment="CENTER" style="-fx-background-color: #3498db;">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <Label text="Register New Event" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="24.0"/>
                </font>
            </Label>
        </HBox>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="20">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <!-- Event Registration Form -->
            <VBox fx:id="eventRegistrationForm" spacing="15"
                  style="-fx-border-color: #bdc3c7; -fx-border-radius: 5; -fx-padding: 15;">
                <Label text="Event Registration Form" style="-fx-font-weight: bold; -fx-font-size: 18;"/>

                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="300"/>
                    </columnConstraints>

                    <!-- Event Title -->
                    <Label text="Title:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="eventTitle" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <!-- Event Description -->
                    <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextArea fx:id="eventDescription" wrapText="true" prefHeight="80"
                              GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <!-- Support Type -->
                    <Label text="Support Type:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="supportType" prefWidth="300"
                              GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <!-- Max Participants -->
                    <Label text="Max Participants:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextField fx:id="maxParticipants" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <!-- Emergency Level -->
                    <Label text="Emergency Level:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="emergencyLevel" prefWidth="300"
                              GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                    <!-- Start Date -->
                    <Label text="Start Date:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                    <HBox spacing="5" GridPane.rowIndex="5" GridPane.columnIndex="1">
                        <TextField fx:id="startDay" prefWidth="60" promptText="Day"/>
                        <TextField fx:id="startMonth" prefWidth="60" promptText="Month"/>
                        <TextField fx:id="startYear" prefWidth="100" promptText="Year"/>
                    </HBox>

                    <!-- End Date -->
                    <Label text="End Date:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                    <HBox spacing="5" GridPane.rowIndex="6" GridPane.columnIndex="1">
                        <TextField fx:id="endDay" prefWidth="60" promptText="Day"/>
                        <TextField fx:id="endMonth" prefWidth="60" promptText="Month"/>
                        <TextField fx:id="endYear" prefWidth="100" promptText="Year"/>
                    </HBox>
                </GridPane>

                <!-- Buttons -->
                <HBox alignment="CENTER_RIGHT" spacing="10">
                    <Button text="Cancel" onAction="#handleCancel"/>
                    <Button text="Submit" onAction="#handleSubmit"
                            style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
                </HBox>
            </VBox>

            <!-- Status message area -->
            <Label fx:id="statusMessage" textFill="#e74c3c" wrapText="true"/>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER_RIGHT" style="-fx-background-color: #ecf0f1; -fx-padding: 10;">
            <Button text="Back to Dashboard" onAction="#handleBack"/>
        </HBox>
    </bottom>
</BorderPane>
