<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="views.screen.VolunteerOrgReviewParticipantsScreenHandler"
            prefHeight="600" prefWidth="900">

    <!-- Header: Show event title và nút Back -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #34495e;">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>
            <Label text="Review Participants for Event:" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="20.0"/>
                </font>
            </Label>
            <Label fx:id="eventTitleLabel" textFill="WHITE" style="-fx-font-size: 20;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Back" onAction="#handleBack" 
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white;"
                    prefWidth="100" prefHeight="30"/>
        </HBox>
    </top>

    <!-- Center: Table các volunteer + các trường mới -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Danh sách volunteer tham gia và nhập điểm:" 
                   style="-fx-font-size: 18; -fx-font-weight: bold;"/>

            <TableView fx:id="participantTable" editable="true" prefHeight="400" prefWidth="850">
                <columns>

                    <!-- Volunteer Username -->
                    <TableColumn fx:id="volunteerColumn" text="Volunteer" prefWidth="200"/>

                    <!-- Hours Participated -->
                    <TableColumn fx:id="hoursColumn" text="Hours Participated" prefWidth="150"/>

                    <!-- Rating By Org (nếu có) -->
                    <TableColumn fx:id="ratingByOrgColumn" text="Rating By Org" prefWidth="150"/>

                    <!-- New Score -->
                    <TableColumn fx:id="newScoreColumn" text="New Score (1-5)" prefWidth="150"/>
                </columns>
            </TableView>

            <Label fx:id="statusMessage" textFill="#e74c3c" wrapText="true"/>

            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Button text="Submit Ratings" onAction="#handleSubmitRatings"
                        style="-fx-background-color: #2ecc71; -fx-text-fill: white;"
                        prefWidth="150" prefHeight="30"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
